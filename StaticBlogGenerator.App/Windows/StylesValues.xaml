<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <sys:Double x:Key="ValueDefault">18</sys:Double>
    <sys:Double x:Key="Padding">5</sys:Double>
    <sys:Double x:Key="Margin">10</sys:Double>
    <sys:Double x:Key="WidthLabel">125</sys:Double>
    <sys:Double x:Key="WidthInput">300</sys:Double>
    <sys:Double x:Key="WidthButton">125</sys:Double>

    <SolidColorBrush x:Key="ForegroundColor" Color="White"/>
    <SolidColorBrush x:Key="BackgroundColorDefault" Color="DarkGray"/>
    <SolidColorBrush x:Key="BackgroundColorSave" Color="DarkGreen"/>
    <SolidColorBrush x:Key="BackgroundColorClear" Color="DarkRed"/>

    <Thickness x:Key="PaddingDefault"
               Bottom="{StaticResource Padding}"
               Top="{StaticResource Padding}"
               Left="{StaticResource Padding}"
               Right="{StaticResource Padding}"/>

    <Thickness x:Key="MarginDefault"
               Bottom="{StaticResource Margin}"
               Top="{StaticResource Margin}"
               Left="{StaticResource Margin}"
               Right="{StaticResource Margin}"/>

</ResourceDictionary>

